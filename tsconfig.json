{
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "declaration": true,
    "baseUrl": ".",
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
